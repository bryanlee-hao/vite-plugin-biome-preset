{
  "name": "vite-plugin-biome-preset",
  "version": "0.1.1",
  "description": "Vite plugin for Biome integration with real-time formatting and linting",
  "type": "module",
  "main": "./es/index.js",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "types": "./es/index.d.ts"
    },
    "./default-biome.json": {
      "default": "./default-biome.json"
    }
  },
  "files": [
    "es",
    "default-biome.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bryanlee-hao/vite-plugin-biome-preset"
  },
  "scripts": {
    "clean": "rm -rf es",
    "build": "npm run clean && vite build && npm run copy-config && npm run generate-types",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch",
    "copy-config": "cp default-biome.json es/",
    "generate-types": "tsc --emitDeclarationOnly --declaration --outDir es",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vite",
    "plugin",
    "biome",
    "formatter",
    "linter",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "vite": "^6.0.0",
    "@biomejs/biome": "2.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
} 